	| patch -p0; \
	find . -name "*.orig" -delete; \
	./configure \
		CC="$(CC)" \
		CFLAGS="$(CFLAGS)" \
		LDFLAGS="$(LDFLAGS)" \
	)

$(FLOCK)/flock: $(FLOCK)/Makefile
	(cd $(?D) && $(MAKE) -S flock)

flock: $(FLOCK)/flock

