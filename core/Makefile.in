	if [ -z "$$(find $(VIM) -name '*.orig')" ]; then \
		(cat patches/vim-src-* || echo) | (cd $(VIM) && patch -p0); \
	fi
	(cd $(VIM) && \
	./configure \
		CC="$(CC)" \
		CFLAGS="$(CFLAGS) -DFEAT_CONCEAL -DFEAT_TERMGUICOLORS" \
		LDFLAGS="$(LDFLAGS)" \
