	tar --help 2>&1 | grep -q GNU && from_file="-T" || from_file="-I"; \
	(cd $(VIM) && \
	ls -1 $$(cat $(PWD)/$?) 2>/dev/null \
	| sed -n "s/^runtime/vimruntime/p" \
